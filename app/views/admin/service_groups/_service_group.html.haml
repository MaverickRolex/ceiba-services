%tr{ data: { "service-group-id" => service_group.id } }
  %td
    = service_group.id
  %td
    = service_group.name
  %td
    = service_group.description
  %td
    .btn-group
      %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
        Action
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to "Edit", edit_service_group_path(service_group), remote: :true
        %li
          = link_to "Delete", service_group_path(service_group.id), method: :delete, remote: :true