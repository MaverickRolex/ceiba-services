%tr{ data: { "service-id" => service.id } }
  %td
    = service.id
  %td
    = service.title
  %td
    = service.description
  %td
    .btn-group
      %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
        Action
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to "Edit", edit_service_path(service), remote: :true
        %li
          = link_to "Delete", service_path(service.id), method: :delete, remote: :true