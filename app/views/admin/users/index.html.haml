.row
  .col-sm-12
    .row
      .col-sm-6.new-btn-margin
        %span.new-user-btn
          = link_to "Nuevo Usuario", new_user_path, class: "btn btn-primary", remote: :true
      .col-sm-6
        %span#users-paginate.pagination.pagination-sm
          = will_paginate @users, :previous_label => 'Anterior', :next_label => 'Siguiente', renderer: BootstrapPagination::Rails

    = render partial: "admin/users/users_table"

    %span#users-paginate.pagination.pagination-sm
      = will_paginate @users, :previous_label => 'Anterior', :next_label => 'Siguiente', renderer: BootstrapPagination::Rails

#global-modal.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"}
        %h4.modal-title Nuevo Usuario  
      .modal-body
