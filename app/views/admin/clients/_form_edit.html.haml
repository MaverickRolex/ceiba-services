= form_for @client, remote: :true do |f|
  - unless @client.errors.empty?
    .alert.alert-danger{:role => "alert"}
      - @client.errors.full_messages.each do |msg|
        %ul= msg
  %ul#form-new-record
    .form-group
      .col-md-12
        = f.label :"Nombre del Cliente"
        = f.text_field :name, class: 'form-control', placeholder: 'Nombre del Cliente'
        %br/
    .form-group
      .col-md-12
        = f.label :Description
        = f.text_field :description, class: 'form-control', placeholder: 'Descripcion'
        %br/
        %br/
    .form-group
      .col-md-12
        = f.submit "Guardar", class: "btn btn-primary"
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancelar
