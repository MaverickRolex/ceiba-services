%tr{ data: { "client-id" => client.id } }
  %td
    = client.id
  %td
    = client.name
  %td
    = client.description
  %td
    .btn-group
      %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
        Action
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to "Edit", edit_client_path(client), remote: :true
        %li
          = link_to "Delete", client_path(client.id), method: :delete, remote: :true