%tr{ data: { "company-id" => company.id } }
  %td
    = company.name
  %td
    = company.rfc
  %td
    = company.description
  %td
    .btn-group
      %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
        Action
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to "Edit", edit_company_path(company), remote: :true
        %li
          = link_to "Delete", company_path(company.id), method: :delete, remote: :true