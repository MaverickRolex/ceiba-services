%tr{ data: { "inventory-id" => inventory.id } }
  %td
    = inventory.id
  %td
    = inventory.company_id
  %td
    = inventory.quantity
  %td
    .btn-group
      %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
        Action
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to "Edit", edit_inventory_path inventory , remote: :true
        %li
          = link_to "Delete", inventory_path(inventory.id), method: :delete, remote: :true