<% if @inventory.errors.empty? %>
  $("tr[data-inventory-id='<%= @inventory.id %>']").replaceWith("<%= j render @inventory %>");
  $("#global-modal").modal("hide");
<% else %>
  $("#global-modal .modal-body").html("<%= j render partial: 'form_edit' %>");
  $("#global-modal").modal("show");
<% end %>